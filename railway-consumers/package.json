{
  "name": "nextecom-consumers",
  "version": "1.0.0",
  "description": "RabbitMQ Consumers for NextEcom - Railway Deployment",
  "main": "start-consumers.js",
  "scripts": {
    "start": "node start-consumers.js",
    "dev": "tsx start-consumers.ts",
    "build": "tsc start-consumers.ts --outDir . && tsc ../lib/rabbitmqConsumer.ts --outDir lib && tsc ../lib/rabbitmq.ts --outDir lib && tsc ../lib/eventHandlers.ts --outDir lib && tsc ../lib/consumerService.ts --outDir lib"
  },
  "dependencies": {
    "amqplib": "^0.10.8",
    "dotenv": "^17.2.1",
    "mongodb": "^6.18.0",
    "mongoose": "^8.17.0",
    "nodemailer": "^6.9.9",
    "puppeteer": "^24.16.2",
    "winston": "^3.17.0",
    "cloudinary": "^2.7.0",
    "twilio": "^5.8.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^3.0.2"
  },
  "devDependencies": {
    "tsx": "^4.20.5",
    "typescript": "^5.6.3",
    "@types/amqplib": "^0.10.7",
    "@types/node": "^22.9.0",
    "@types/nodemailer": "^7.0.0",
    "@types/jsonwebtoken": "^9.0.10"
  },
  "engines": {
    "node": ">=18.18.0"
  }
